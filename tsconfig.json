{
    "compilerOptions": {
        // 与 Vue 的浏览器支持保持一致
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictFunctionTypes": false,
        "paths": {
            "~/*": [
                "./packages/*"
            ]
        },       
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.ts",
        "packages/**/*.vue",
        "packages/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}